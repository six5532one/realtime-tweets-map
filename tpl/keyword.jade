doctype html
html(style='width: 100%; height: 100%; margin: 0; padding: 0;')
    head
        title= "Real time Tweet display" 
        script(type='text/javascript' src='/displayTweets.js')
        script(src='http://maps.googleapis.com/maps/api/js')
        script(src='https://maps.googleapis.com/maps/api/js?libraries=visualization')
        script(src='/socket.io/socket.io.js')
    body(style='width: 100%; height: 100%; margin: 0; padding: 0;')
        for item in keywordOptions
            br
            label #{item}
            input(id=item, type="radio", name="kwFilter", value=item, checked=false)
        input#submit(type='button', value='Search this keyword')
        br
        #content(style='width: 500px; height: 50px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: scroll;')
        #mapCanvas(style='width: 90%; height: 90%; margin: 5%;')
